<!-- After a while check if instead of this file shared/feed partial can be used
     without any side effects. -->
<% if @poll_posts.any? %>
  <ol class = "posts">
    <% i = 0 %>
    <% @poll_posts.each do |poll_post| %>
    <%= render 'shared/feed_item', feed_item: poll_post, i: i, hash: @hash %>
    <% i += 1 %>
    <% end %>
  </ol>
     <%= will_paginate @poll_posts  %>
<% end %>

