 <div class='row'>
      <% if signed_in? %>
      <aside class="span4">
      <section>
        <%= form_for(@post) do |f|%>
            <%= render 'shared/error_messages', object: f.object %>
            <div class='field'>
                <%= f.text_area :content, placeholder: "Compose a new post..." %>
            </div>
            <%= f.submit 'Post', class: 'btn btn-large btn-primary' %>
        <% end %>
      </section>
      </aside>
      <% else %>
      <aside class="span4">
        <section>
          <%= form_tag(signin_path, method: :get) do |f| %>
              <div class='field'>
                <%= text_area_tag(:content,(), {placeholder: "Sign in to compose a new post...", disabled: true}) %>
              </div>
              <%= submit_tag 'Post', class: 'btn btn-large btn-primary' %>
          <% end %>
        </section>
      </aside>
      <% end %>
      <div class="span8">
        <ol class="posts">
        <h3>Post Feed</h3>
          <% i = 0 %>
          <% @feed_items.each do |feed_item| %>
              <li id="<%= feed_item.id %>">
        <span class="user">
            <%= link_to feed_item.user.name, feed_item.user %>
        </span>
                <span class="content"><%= truncate(feed_item.content, :length => 250, :separator => ' ', :omission => '...' )%></span>
        <span class="timestamp">
            Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
        </span>
                <br />
                 <%= link_to "Reply", "#", class: "comment_form_link", id: "#{i}" %>
                 <%= form_for(feed_item, url: {controller: :comments, action: :create}, :method => :post, html: {class: "comment_form", id: "#{i}"}) do |f| %>
                    <!-- render 'shared/error_messages', object: f.object -->
                    <%= hidden_field_tag 'feed_item_id', feed_item.id %>
                    <div class='field'>
                      <%= text_area_tag :comment, nil, {placeholder: "Compose a new comment...", class: "text_area_in_comment_form"} %>
                    </div>
                    <%= f.submit 'Comment', class: 'btn btn-large btn-primary' %>
                <% end %>

               <!-- form here-->
              </li>
          <% i += 1 %>
          <% end %>
        </ol>
        <%= will_paginate @feed_items %>
      </div>
    </div>

