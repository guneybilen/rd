<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/post_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3 class = 'posts post-feed'>Post Feed</h3>
        <% unless @feed_items.first.nil? %>
          <span class="polls" data-time="<%= @feed_items.first.created_at.to_i %>"></span>
        <% end %>
        <%= render 'shared/feed', hash: @hash %>
      </div>
    </div>
<% else %>
    <script type="text/javascript">
      window.location.href='/signin'
    </script>
<% end %>
