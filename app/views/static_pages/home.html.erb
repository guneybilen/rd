<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/post_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3 class = 'posts'>Post Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <script type="text/javascript">
      window.location.href='/signin'
    </script>
<% end %>
